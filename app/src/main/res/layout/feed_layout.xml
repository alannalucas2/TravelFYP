<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bokeboarder"
    android:padding="10dp"
    android:layout_margin="1dp"
    android:layout_height="140dp">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileImage"
        android:layout_width="101dp"
        android:layout_height="83dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/pineapplelogo"
        app:civ_border_color="@color/aqua"
        app:civ_border_width="7dp" />

    <TextView
        android:id="@+id/usernameStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="elisha1"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/locationStamp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profileImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="0dp"
        android:text="Location"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addressStamp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/locationStamp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="4dp"
        android:text="Address"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/ratingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addressStamp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="20dp"
        android:text="Rating: "
        android:textColor="@color/white"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/ratingStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addressStamp"
        android:layout_alignBottom="@+id/addressStamp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="210dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-37dp"
        android:layout_toRightOf="@+id/ratingText"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="12dp" />


</RelativeLayout>